'.source.c, .source.cpp':
  'doxygen-file':
    'prefix': 'dfile'
    'body': """
      /*!
         \\\\file ${1:"Filename"}
         \\\\brief ${2:"Description"}
         \\\\author ${3:"author"}
         \\\\date ${4:"dd/mm/yy"}
      */
    """
  'doxygen-function':
    'prefix': 'dfunc'
    'body': """
      /*!
         \\\\brief ${1:"Description"}
         \\\\param ${2:"Param description"}
         \\\\pre ${3:"Pre-conditions"}
         \\\\post ${4:"Post-conditions"}
         \\\\return ${5:"Return of the function"}
      */
    """
  'doxygen-parameter':
    'prefix': 'dparam'
    'body': """
        /*!< ${1:"Param"} */
    """
  'doxygen-macro':
    'prefix': 'dmacro'
    'body': """
        /** ${1:"Macro"}*/
    """
